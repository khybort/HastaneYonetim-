@model IEnumerable<HastaneYonetim.Core.Models.Randevu>
@{
    Layout = null;
}
<div class="col-md-12">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="x_title">Randevu</h4>
        </div>
        <div class="modal-body">
            <table id="appointments" class="table table-striped table-bordered dataTable">
                <thead>
                <tr>
                    <th>Tarih</th>
                    <th>Zaman</th>
                    <th>Doktor</th>
                    <th>Detay</th>
                    <th>Durum</th>
                </tr>

                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StartDateTime.ToString("MMM")-@item.StartDateTime.ToString("d ")-@item.StartDateTime.ToString("yyyy")</td>
                        <td>@item.StartDateTime.ToString("HH:mm")</td>
                        <td>@item.Doctor.Name</td>
                        <td>@item.Detail</td>
                        <td>
                            @{
                                if (item.Status == true)
                                {
                                    <a href="#" style="padding: 3px 10px 3px 10px; background-color: green" class="badge" readonly>Approved</a>
                                }
                                else
                                {
                                    <a href="#" style="padding: 3px 10px 3px 10px; background-color: greenyellow" class="badge" readonly>Pending</a>
                                }
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
        </div>
    </div>

</div>

